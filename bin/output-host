#!/usr/bin/env node

const outputHost = require('../lib');
const pkg = require('../package.json');

const argv = require('yargs')
	.usage('$0 [args]')
	.options({
		n: {
			alias: 'name',
			desc: 'Server name',
			type: 'string',
		},
		p: {
			alias: 'port',
			desc: 'Server port',
			type: 'number',
		},
		host: {
			desc: 'Host',
			type: 'string',
		},
		path: {
			desc: 'URL path',
			default: '',
			type: 'string',
		},
		protocol: {
			desc: 'URL protocol',
			default: 'http',
			type: 'string',
		},
		'local': {
			desc: 'Enable output local host',
			default: true,
			type: 'bool',
		},
		'external': {
			desc: 'Enable output external host',
			default: true,
			type: 'bool',
		},
		'copy': {
			desc: 'Auto copy external host to system clipboard',
			default: true,
			type: 'bool',
		},
		'color': {
			desc: 'Enable color',
			default: true,
			type: 'bool',
		},
		'launch': {
			desc: 'Launch browser automatically',
			choices: ['chrome', 'firefox', 'none'],
			default: 'none',
		},
		'launch-delay': {
			desc: 'Launch browser delay',
			type: 'number',
			default: 2000,
		},
	})
	.alias('h', 'help')
	.help()
	.version(pkg.version)
	.argv
;

const config = Object
	.keys(argv)
	.filter((key) => typeof argv[key] !== 'undefined')
	.reduce((config, key) => Object.assign(config, { [key]: argv[key] }), {
		port: process.env.PORT || 3000,
	})
;

outputHost(config);
